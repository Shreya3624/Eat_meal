<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="#FDBE31"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FullView">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize">
    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:cardCornerRadius="500dp"
        android:layout_marginStart="80dp"
        android:backgroundTint="#fcf3cf">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/viewimg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            tools:ignore="MissingClass,ImageContrastCheck" />
    </androidx.cardview.widget.CardView>
       <TextView
        android:id="@+id/viewname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HELLO ARYAN"
           android:fontFamily="@font/custom_boldfont"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

         <TextView
          android:id="@+id/viewdesc"
          android:layout_width="382dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          android:background="@drawable/txt_bg"
          android:paddingStart="20dp"
          android:paddingRight="20dp"
          android:paddingTop="20dp"
             android:fontFamily="@font/custom_boldfont"
             android:textColor="@color/black"
          android:text="HELLO ARYAN"
          android:textSize="20sp"
          android:textStyle="bold"
          tools:ignore="HardcodedText,RtlHardcoded" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>