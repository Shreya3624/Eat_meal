<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fcf3cf "
    android:layout_height="match_parent"
    tools:context=".profile">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="120dp"
        android:src="@drawable/app_logo1">
    </ImageView>

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="500dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="200dp"
        app:cardCornerRadius="25dp"
        android:backgroundTint="#FDBE31">

        <TextView
            android:id="@+id/txt_uname"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="100dp"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="20dp"
            android:text="Aryan Rajput"
            android:padding="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.714"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.652" />

        <TextView
            android:id="@+id/txt_bmi"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="150dp"
            android:drawableLeft="@drawable/baseline_info_24"
            android:drawablePadding="20dp"
            android:text="My BMI : Overweight"
            android:padding="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.754" />

        <TextView
            android:id="@+id/txt_nut"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="200dp"
            android:drawableLeft="@drawable/baseline_restaurant_menu_24"
            android:drawablePadding="20dp"
            android:padding="10dp"
            android:text="Nutritional Goals"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.754" />

        <TextView
            android:id="@+id/txt_help"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="245dp"
            android:drawableLeft="@drawable/baseline_help_outline_24"
            android:drawablePadding="20dp"
            android:padding="10dp"
            android:text="Need Help ?"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.754" />

        <Button
            android:id="@+id/btn"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="400dp"
            android:background="@drawable/btn_shape"
            android:backgroundTint="#fcf3cf "
            android:text="ð‹ð¨ð  - ð¨ð®ð­"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.907" />

    </androidx.cardview.widget.CardView>

</FrameLayout>