<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fcf3cf "
    android:layout_height="match_parent"
    tools:context=".profile">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="20sp"
        android:src="@drawable/app_logo_1">
    </ImageView>

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="500dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="200dp"
        app:cardCornerRadius="25dp"
        android:backgroundTint="#FDBE31">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/custom_boldfont"
                android:gravity="center"
                android:text="Cook Smart, Plan Ahead, Shop Easy – Your All-in-One Kitchen Companion!"
                android:textColor="@color/black"
                android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_uname"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/custom_boldfont"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="20dp"
            android:text="Aryan Rajput"
            android:padding="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.714"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.652" />
        <TextView
            android:id="@+id/pr_email"
            android:layout_below="@+id/txt_uname"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:fontFamily="@font/custom_boldfont"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="20dp"
            android:textColor="@color/black"
            android:text="Aryan Rajput"
            android:padding="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
             />

        <TextView
            android:id="@+id/pr_bmi"
            android:layout_below="@+id/pr_email"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:drawableLeft="@drawable/baseline_info_24"
            android:drawablePadding="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/custom_boldfont"
            android:text="Your BMI : Overweight"
            android:padding="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/txt_nut"
            android:layout_below="@id/pr_bmi"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:drawableLeft="@drawable/baseline_restaurant_menu_24"
            android:drawablePadding="20dp"
            android:padding="10dp"
            android:fontFamily="@font/custom_boldfont"
            android:textColor="@color/black"
            android:text="Nutritional Goals"
            android:textSize="20dp"
            android:textStyle="bold"
           />

        <TextView
            android:id="@+id/txt_help"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_below="@id/txt_nut"
            android:drawableLeft="@drawable/baseline_help_outline_24"
            android:drawablePadding="20dp"
            android:padding="10dp"
            android:fontFamily="@font/custom_boldfont"
            android:textColor="@color/black"
            android:text="Need Help ?"
            android:textSize="20dp"
            android:textStyle="bold"
             />

            <Button
                android:id="@+id/btn"
                android:layout_width="250dp"
                android:layout_height="65dp"
                android:layout_below="@id/txt_help"
                android:layout_marginStart="70dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn_shape"
                android:backgroundTint="#fcf3cf "
                android:fontFamily="@font/custom_boldfont"
                android:text="𝐋𝐨𝐠 - 𝐨𝐮𝐭"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>